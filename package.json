  "bugs": {
    "url": "https://github.com/NBBLIG/Hope/issues"
  },
  "homepage": "https://github.com/NBBLIG/Hope#readme",
  "devDependencies": {
    "concurrently": "^4.1.2",
    "gitbook-cli": "^2.3.2",
    "node-fetch": "^2.6.7",
    "open-cli": "^5.0.0",
    "shelljs": "^0.8.3"
  }
}
